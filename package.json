{
  "name": "@kundinos/nanostores",
  "version": "0.4.4",
  "description": "A tiny (152 bytes) state manager for React/Preact/Vue/Svelte with many atomic tree-shakable stores",
  "keywords": [
    "nano",
    "state",
    "state manager",
    "react",
    "react native",
    "preact",
    "vue",
    "svelte",
    "store"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts",
    "test": "echo 'No test for this library' && exit 0",
    "prepublish": "npm run build",
    "publish": "np"
  },
  "author": "Yury Kundin <ykundin@yandex.ru>",
  "license": "MIT",
  "homepage": "https://github.com/kundinos/nanostores",
  "repository": "kundinos/nanostores",
  "sideEffects": false,
  "main": "./index.cjs",
  "exports": {
    ".": {
      "require": "./index.cjs",
      "default": "./index.js"
    },
    "./vue": {
      "require": "./vue/index.cjs",
      "default": "./vue/index.js"
    },
    "./react": {
      "require": "./react/index.cjs",
      "default": "./react/index.js"
    },
    "./preact": {
      "require": "./preact/index.cjs",
      "default": "./preact/index.js"
    },
    "./package.json": "./package.json"
  },
  "react-native": {
    "./react/batch/index.js": "./react/batch/index.native.js"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "preact": ">=10.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.1.1"
  },
  "peerDependenciesMeta": {
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@logux/eslint-config": "^45.4.7",
    "@logux/sharec-config": "^0.11.0",
    "@size-limit/preset-small-lib": "^5.0.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/preact": "^2.0.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/vue": "^6.4.0",
    "@types/jest": "^27.0.1",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@vue/compiler-sfc": "^3.2.2",
    "check-dts": "^0.5.5",
    "clean-publish": "^2.2.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "jest": "^27.0.6",
    "jest-localstorage-mock": "^2.4.16",
    "lint-staged": "^11.1.2",
    "nanodelay": "^2.0.0",
    "np": "^7.5.0",
    "preact": "^10.5.14",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.53.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.30.0",
    "simple-git-hooks": "^2.5.1",
    "size-limit": "^5.0.3",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "vue": "^3.1.1",
    "yaspeller": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true,
        "isolatedModules": true
      }
    },
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "consistent-return": "off",
      "camelcase": "off"
    },
    "globals": {
      "jsdom": false
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Store",
      "import": {
        "./index.js": "{ createStore }"
      },
      "limit": "172 B"
    },
    {
      "name": "Map",
      "import": {
        "./index.js": "{ defineMap }"
      },
      "limit": "326 B"
    },
    {
      "name": "All",
      "import": {
        "./index.js": "{ createStore, defineMap, createDerived, getValue, effect }"
      },
      "limit": "526 B"
    },
    {
      "name": "React",
      "import": {
        "./react/index.js": "{ useStore }",
        "./index.js": "{ createStore, defineMap, createDerived, getValue }"
      },
      "limit": "575 B"
    },
    {
      "name": "Vue",
      "import": {
        "./vue/index.js": "{ useStore }",
        "./index.js": "{ createStore, defineMap, createDerived, getValue }"
      },
      "limit": "570 B"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\).",
      "\\d+\\.\\d+ “[^”]+”"
    ],
    "dictionary": [
      "Versioning",
      "Logux",
      "CRDT",
      "Vue",
      "gzipped",
      "Shakable",
      "Preact",
      "WebSocket",
      "UI",
      "unsubscribing",
      "unsubscribe",
      "JS",
      "composable",
      "ESM",
      "js",
      "async",
      "ES",
      "CommonJS",
      "SSR",
      "isomorphic"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.11.0"
  }
}
